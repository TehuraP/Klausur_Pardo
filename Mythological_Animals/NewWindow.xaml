<Window x:Class="Mythological_Animals.NewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mythological_Animals"
        mc:Ignorable="d"
        Title="NewWindow" Height="450" Width="800">
    <StackPanel>
        <UniformGrid Columns="3" Rows="1">
            <TextBox Text="{Binding NewGod.Name}"/>
            <TextBox Text="{Binding NewGod.Description}"/>
            <Button Click="ButtonNewGod_Click">Add God</Button>
        </UniformGrid>
    </StackPanel>
</Window>
